{
    "description": "Rapidly create automated tests to run on eureQa Cloud",
    "manifest_version": 2,
    "name": "eureQa Headless QaSCRIBE - QA",
    "version": "3.0.0.9",
    "homepage_url": "http://www.sayeureqa.com/",
    "devtools_page": "devtools/devtools.html",
    "icons":{   
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
       "128": "icons/icon128.png"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "webRequest",
        "contextMenus",
        "webNavigation",
        "notifications",
        "storage"
    ],

    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content/atoms.js"
                , "content/utils.js"
                , "content/selenium-browserbot.js"
                , "content/selenium-api.js"
                , "content/locator-builders.js"
                , "content/recorder.js"
                , "content/recorder-handlers.js"
                , "content/command-receiver.js"
                , "content/target-selecter.js"
                , "content/sizzle.js"],
            "match_about_blank": true,
            "all_frames": true
        },
        {
            "matches": ["<all_urls>"],
            "js": ["common/browser-polyfill.js"
                , "content/prompt-injecter.js"
                , "content/runScript-injecter.js"],
            "match_about_blank": true,
            "all_frames": true,
            "run_at": "document_start"
        },
        {
            "matches": ["<all_urls>"],
            "js": ["common/jquery-3.2.1.min.js"
                ,"content/headless/extension-info.js"],
            "run_at": "document_end"
        },
        {
            "matches": ["<all_urls>"],
            "js": ["common/jquery-3.2.1.min.js"
                ,"content/headless/eureqa-connection.js"],
            "match_about_blank": true,
            "all_frames": true,
            "run_at": "document_start"
        },
        {
            "matches": ["<all_urls>"],
            "js": ["devtools/content/devtools-content.js"]
        }
    ],

    "background":
    {
        "scripts": ["common/jquery-3.2.1.min.js"
            , "common/browser-polyfill.js"
            , "common/underscore-min-1.8.3.js"
            , "background/background.js"
            , "background/utils.js"
            , "background/selblocks-api.js"
            , "background/eureqa-api.js"
            , "background/index.js"
            , "background/command-grid.js"
            , "background/log.js"
            , "background/window-controller.js"
            , "background/record-receiver.js"
            , "background/editor.js"
            , "background/format-command.js"
            , "background/playback.js"
        ]
    },
    
    "web_accessible_resources": ["page/prompt.js"
        , "page/runScript.js"
        , "panel/bootstrap.html"]
}
